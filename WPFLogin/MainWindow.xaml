<Window x:Class="WPFLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLogin"
        mc:Ignorable="d"
        Title="Login" Height="178" Width="202"
        Background="LightGray" ResizeMode="CanMinimize">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" FontSize="16" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="10,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Left" FontSize="16" Margin="13,49,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="10,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnEntra" Content="Entra" HorizontalAlignment="Left" Margin="11,126,0,0" VerticalAlignment="Top" Width="49"/>
        <Button x:Name="btnCambia" Content="Cambia" HorizontalAlignment="Left" Margin="130,126,0,0" VerticalAlignment="Top" Width="49"/>

    </Grid>
</Window>
